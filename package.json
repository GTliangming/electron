{
  "name": "myelectronapp",
  "version": "1.0.0",
  "description": "electron +  react +ts项目",
  "main": "main.js",
  "scripts": {
    "start-electron": "npm run build-main && ENV=development electron .",
    "start-electron-with-nodemon": "nodemon --watch main.ts --exec 'npm run start-electron'",
    "start": "webpack-dev-server --config webpack.renderer.config.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-render": "webpack --config webpack.renderer.config.js",
    "build-main": "webpack --config webpack.main.config.js",
    "build-electron": "electron-builder build -m",
    "build": "npm install && npm run build-render && npm run build-main && npm run build-electron"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GTliangming/electron.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/GTliangming/electron/issues"
  },
  "homepage": "https://github.com/GTliangming/electron#readme",
  "dependencies": {
    "npm": "^7.19.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/react": "^17.0.13",
    "@types/react-dom": "^17.0.8",
    "css-loader": "^5.2.6",
    "electron": "11.0.0",
    "electron-builder": "^22.11.7",
    "html-webpack-plugin": "^5.3.2",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.9",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.0.0",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.5",
    "webpack": "^5.42.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "build": {
    "productName": "electron-demos",
    "files": [
      "dist/",
      "main.js"
    ],
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "directories": {
      "output": "release"
    }
  }
}
